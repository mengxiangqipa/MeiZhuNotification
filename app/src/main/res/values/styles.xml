<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NotificationAnim">
        <item name="android:windowEnterAnimation">@anim/whole_notification_anim_in</item>
        <item name="android:windowExitAnimation">@anim/whole_notification_anim_out</item>
    </style>

    <style name="WholeNotificationAnim">
        <item name="android:windowEnterAnimation">@anim/whole_notification_anim_in</item>
        <item name="android:windowExitAnimation">@anim/whole_notification_anim_out</item>
    </style>
</resources>
